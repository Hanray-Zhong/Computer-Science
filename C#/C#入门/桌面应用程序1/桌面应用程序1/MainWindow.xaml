<Window x:Class="桌面应用程序1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:桌面应用程序1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="Black" Offset="0"/>
			<GradientStop Color="#FFC3C3C3" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>
	<Grid>
		<Button Content="开始" HorizontalAlignment="Center" VerticalAlignment="Center" Width="112" Click="Button_Click" Height="29" FontFamily="Microsoft New Tai Lue" FontStyle="Italic" FontWeight="Bold">
			<Button.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="Black" Offset="0"/>
					<GradientStop Color="#FFCFCECE" Offset="1"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>

	</Grid>
</Window>
